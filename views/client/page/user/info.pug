extends ../../layouts/default.pug 

block main 
    
    h1(class="mb-4") #{pageTitle}
    if(user.fullName)
        div(class="mb-4") Họ tên: <b>#{user.fullName}</b>
    if(user.email)
        div(class="mb-4") Email: <b>#{user.email}</b>
    if(user.phone)
        div(class="mb-4") Số điện thoại: <b>#{user.phone}</b>
    if(user.avatar)
        div(class="mb-4")
            img(
                src=user.avatar
                style="width: 100px"
            )
    if(user.status)
                    div(class="mb-4")
                        span Trạng thái:  
                        if(user.status==="active")
                            span(class="badge badge-success") Hoạt động 
                        else
                            span(class="badge badge danger") Dừng hoạt động
    
    
    a(
        href=`/user/edit/${user.id}`
        class="btn btn-warning btn-sm",
    ) Chỉnh sửa