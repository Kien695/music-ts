{
  "compilerOptions": {
    "target": "es6", //cho phép biên dịch code Typescript sang ES6
    "module": "CommonJS", //tiêu chuẩn được sử dụng trong node.js để làm việc với các module
    "removeComments": true, //xóa comment khi biên dịch sang file js
    "esModuleInterop": true, //dùng được từ khóa export thay cho require
    "outDir": "dist"
  }
}
