extends ../../layouts/default.pug 

block main 
    
    h1(class="mb-4") #{pageTitle}
    if(account.fullName)
        div(class="mb-4") Họ tên: <b>#{account.fullName}</b>
    if(account.avatar)
        div(class="mb-4")
            img(
                src=account.avatar
                style="width: 100px"
            )
    if(account.email)
        div(class="mb-4") Email: <b>#{account.email}</b>
    if(account.phone)
        div(class="mb-4") Số điện thoại: <b>#{account.phone}</b>
    if(role.title)
        div(class="mb-4") Quyền: <b>#{role.title}</b>
    if(account.status)
        div(class="mb-4")
            span Trạng thái: 
            if(account.status==="active")
                span(class="badge badge-success") Hoạt động 
            else
                span(class="badge badge danger") Dừng hoạt động    
    a(
        href=`${prefixAdmin}/accounts/edit/${role.id}`
        class="btn btn-warning btn-sm",
    ) Chỉnh sửa