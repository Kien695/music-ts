extends ../../layouts/default.pug 

block main 
    
    h1(class="mb-4") #{pageTitle}
    if(song.title)
        div(class="mb-4") Chủ đề: <b>#{song.title}</b>
    
    if(song.avatar)
        div(class="mb-4")
            img(
                src=song.avatar
                style="width: 100px"
            )
    if(song.audio)
        div(class="mb-4")
            audio(
                src=song.audio
                controls
            )
    if(singer.fullName)
        div(class="mb-4") Người biểu diễn: <b>#{singer.fullName}</b>
    if(topic.title)
        div(class="mb-4") Chủ đề: <b>#{topic.title}</b>
    if(song.like)
        div(class="mb-4") Lượt like: <b>#{song.like} like</b> 
    if(song.listen)
        div(class="mb-4") Lượt nghe: <b>#{song.listen} </b> 
    if(song.description)
        div(class="mb-4") Mô tả: <b>!{song.description}</b>
    if(song.lyrics)
        div(class="mb-4") Lời bài hát: <b>!{song.lyrics}</b>
    if(song.status)
        div(class="mb-4")
            span Trạng thái: 
            if(song.status==="active")
                span(class="badge badge-success") Hoạt động 
            else
                span(class="badge badge danger") Dừng hoạt động
    
    a(
        href=`${prefixAdmin}/songs/edit/${song.id}`
        class="btn btn-warning btn-sm",
    ) Chỉnh sửa