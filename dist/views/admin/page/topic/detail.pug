extends ../../layouts/default.pug 

block main 
    
    h1(class="mb-4") #{pageTitle}
    if(topic.title)
        div(class="mb-4") Chủ đề: <b>#{topic.title}</b>
    
    if(topic.avatar)
        div(class="mb-4")
            img(
                src=topic.avatar
                style="width: 100px"
            )
    if(topic.description)
        div(class="mb-4") Mô tả: <b>!{topic.description}</b>
    if(topic.status)
        div(class="mb-4")
            span Trạng thái: 
            if(topic.status==="active")
                span(class="badge badge-success") Hoạt động 
            else
                span(class="badge badge danger") Dừng hoạt động
    
    a(
        href=`${prefixAdmin}/topics/edit/${topic.id}`
        class="btn btn-warning btn-sm",
    ) Chỉnh sửa